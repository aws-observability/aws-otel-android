{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "software.amazon.opentelemetry.android.config",
  "title": "ADOT Android Agent Config",
  "description": "A spec for configuring the ADOT (AWS Distro for OpenTelemetry) Android agent",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "version": {
      "description": "Version of this schema",
      "const": "1.0.0",
      "type": "string"
    },
    "aws": {
      "type": "object",
      "description": "Settings to configure OpenTelemetry for AWS",
      "properties": {
        "region": {
          "type": "string",
          "description": "AWS region you intend to export telemetry to (example: \"us-east-1\")"
        },
        "rumAppMonitorId": {
          "type": "string",
          "description": "AWS RUM Application Monitor ID (example: \"00000000-0000-0000-0000-000000000000\")"
        },
        "rumAlias": {
          "type": "string",
          "description": "Adds an alias to all requests. This is compared against the rum:alias service context in app monitors with resource based policies attached"
        },
        "cognitoIdentityPoolId": {
          "type": "string",
          "description": "AWS Cognito Identity Pool ID for authentication (example: \"us-east-1:a1b2c3d4-5678-90ab-cdef-EXAMPLE11111\")"
        }
      },
      "required": ["region", "rumAppMonitorId"]
    },
    "exportOverride": {
      "type": "object",
      "description": "Settings to override the default ADOT exporting behavior",
      "properties": {
        "logs": {
          "type": "string",
          "format": "uri",
          "description": "Override the export destination for otel Logs"
        },
        "traces": {
          "type": "string",
          "format": "uri",
          "description": "Override the export destination for otel Traces"
        },
        "compression": {
          "type": "string",
          "enum": [
            "none",
            "gzip"
          ],
          "description": "The method used to compress exported payloads",
          "default": "none"
        }
      }
    },
    "telemetry": {
      "type": "object",
      "description": "Settings that allow you finer control over all types of instrumented telemetry",
      "properties": {
        "activity": {
          "type": "object",
          "description": "Configure activity lifecycle monitoring",
          "properties": { "enabled": { "type": "boolean" } }
        },
        "anr": {
          "type": "object",
          "description": "Configure ANR (Application Not Responding) detection",
          "properties": { "enabled": { "type": "boolean" } }
        },
        "crash": {
          "type": "object",
          "description": "Configure crash reporting",
          "properties": { "enabled": { "type": "boolean" } }
        },
        "fragment": {
          "type": "object",
          "description": "Configure fragment lifecycle monitoring",
          "properties": { "enabled": { "type": "boolean" } }
        },
        "network": {
          "type": "object",
          "description": "Configure network state monitoring",
          "properties": { "enabled": { "type": "boolean" } }
        },
        "slow_rendering": {
          "type": "object",
          "description": "Configure detection of slow UI rendering",
          "properties": { "enabled": { "type": "boolean" } }
        },
        "startup": {
          "type": "object",
          "description": "Configure application startup monitoring",
          "properties": { "enabled": { "type": "boolean" } }
        },
        "http_urlconnection": {
          "type": "object",
          "description": "Configure HttpURLConnection monitoring",
          "properties": { "enabled": { "type": "boolean" } }
        },
        "okhttp_3.0": {
          "type": "object",
          "description": "Configure OkHttp 3.0 monitoring",
          "properties": { "enabled": { "type": "boolean" } }
        },
        "ui_load": {
          "type": "object",
          "description": "Configure UI load time monitoring",
          "properties": { "enabled": { "type": "boolean" } }
        },
        "session_events": {
          "type": "object",
          "description": "Configure session event instrumentation",
          "properties": { "enabled": { "type": "boolean" } }
        }
      }
    },
    "sessionTimeout": {
      "type": "integer",
      "description": "The maximum duration, in seconds, that a session can be inactive for before a new session is created",
      "minimum": 0,
      "default": 300
    },
    "sessionSampleRate": {
      "type": "number",
      "description": "The proportion of sessions that will be recorded by the agent, specified as a unit interval. When this field is 0, no sessions will be recorded. When this field is 1, all sessions will be recorded.",
      "minimum": 0,
      "maximum": 1,
      "default": 1
    },
    "applicationAttributes": {
      "type": "object",
      "description": "Custom OpenTelemetry attributes injected into every Span and LogRecorded vended by your app. You can use this to include custom metadata with your telemetry.",
      "additionalProperties": {
        "oneOf": [
          { "type": "string" },
          { "type": "number" },
          { "type": "boolean" }
        ]
      }
    }
  },
  "required": [ "aws" ]
}
